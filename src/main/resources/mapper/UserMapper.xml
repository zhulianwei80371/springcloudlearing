<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springcloudlearing.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="org.example.springcloudlearing.entity.User">
            <id property="id" column="id" jdbcType="VARCHAR"/>
            <result property="created_by" column="created_by" jdbcType="VARCHAR"/>
            <result property="created_date" column="created_date" jdbcType="TIMESTAMP"/>
            <result property="deleted" column="deleted" jdbcType="TINYINT"/>
            <result property="last_modified_by" column="last_modified_by" jdbcType="VARCHAR"/>
            <result property="last_modified_date" column="last_modified_date" jdbcType="TIMESTAMP"/>
            <result property="version" column="version" jdbcType="INTEGER"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="balance" column="balance" jdbcType="DECIMAL"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,created_by,created_date,
        deleted,last_modified_by,last_modified_date,
        version,email,name,
        balance
    </sql>
    <update id="updateBalanceByIds">
    update t_user set balance = balance - #{amount} ${ew.customSqlSegment}
    </update>
</mapper>
